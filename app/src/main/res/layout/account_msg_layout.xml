<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="650dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/black_bg"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <Button android:id="@+id/closeBtn"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/item_free"/>

    <TextView android:id="@+id/targetNameTxt"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:text="交易方"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView android:id="@+id/noteTxt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:text="备注"
        app:layout_constraintTop_toBottomOf="@id/targetNameTxt"
        android:layout_marginTop="10dp"
        />

    <TextView android:id="@+id/typeTxt"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:text="收支类型"
        app:layout_constraintTop_toBottomOf="@id/noteTxt"
        android:layout_marginTop="10dp"
        />

    <TextView android:id="@+id/valueTxt"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:text="金额"
        app:layout_constraintTop_toBottomOf="@+id/typeTxt"
        android:layout_marginTop="10dp"
        />

    <TextView android:id="@+id/orderIDTxt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:text="订单号"
        app:layout_constraintTop_toBottomOf="@+id/valueTxt"
        android:layout_marginTop="10dp"
        />

    <TextView android:id="@+id/timeTxt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:text="订单号"
        app:layout_constraintTop_toBottomOf="@+id/orderIDTxt"
        android:layout_marginTop="10dp"
        />

    <TextView android:id="@+id/tipTxt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:text="点击空白处关闭"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>