<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/black_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <Button android:id="@+id/closeBtn"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/item_free"
        />

    <TextView android:id="@+id/targetNameTxt"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorWhite"
        />

    <TextView android:id="@+id/noteTxt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/targetNameTxt"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        />

    <TextView android:id="@+id/typeTxt"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/noteTxt"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        />

    <TextView android:id="@+id/valueTxt"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/typeTxt"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        />

    <TextView android:id="@+id/orderIDTxt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/valueTxt"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        />

    <TextView android:id="@+id/timeTxt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/orderIDTxt"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        />

    <TextView android:id="@+id/tipTxt"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:text="@string/BottomTip"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        />


</androidx.constraintlayout.widget.ConstraintLayout>